- rw = local_assigns[:rw] || false
- avatar = local_assigns[:avatar] || false
- delete = local_assigns[:delete] || false
- last_change = local_assigns[:last_change] || false

.grid-item.map-preview.background-bright{class: "map_#{map.public_id}"}

  - unless map.view_permission == 'listed'
    .map-auth{title: 'This map is private and not linked from the public listing.'}
      %i.bi.bi-lock-fill

  - if map.user && avatar
    - if map.user.image
      = image_tag avatar_url(map.user.image, 40), class: 'map-avatar', loading: 'lazy', alt: "", crossorigin: "anonymous"

  - if delete
    = link_to destroy_map_path(id: map.private_id), data: { turbo_method: :delete, turbo_confirm: "Do you really want to delete this map?" }, title: 'Delete map', class: 'map-delete' do
      %i.bi.bi-trash

  .preview-image-link
    = link_to(map_path(id: (rw ? map.private_id : map.public_id), name: map.name), 'aria-label': "Open map '#{map.name}'") do
      - if map.screenshot
        %img{src: map.screenshot,
            class: 'preview-image',
            loading: 'lazy',
            alt: "Map '#{map.name}'"}
      - else
        = image_tag "preview.png", class: 'preview-image', loading: 'lazy', alt: "Map '#{map.name}'"
    .map-preview-title.text-glow= map.name

  - if last_change
    %i= "last change #{distance_of_time_in_words(DateTime.now, map.updated_at)} ago"
    %br
    = "#{ map.view_count } views"
    %br
    = "#{ map.features_count } features"  
    %br
    public id:
    = link_to map.public_id, map.public_map_path
