#feature-details-modal.map-modal.modal-pull-transition.fade{ 
  'data-controller': "map--modal feature--modal feature--edit", 
  'data-action': "keydown.esc@window->map--modal#close toggle-edit-feature@window->feature--modal#toggle_edit_feature" }

  %a.link{ 'data-action': "click->feature--modal#toggleModalSize"}
    .modal-pull-button

  %button.modal-close-button{ 'data-action': "click->map--modal#close" } &times;
  
  .map-modal-header
    %h4#feature-details-header.flex-container
      .feature-symbol
      #feature-title.flex-container.flex-center.selectable

  .map-modal-header#edit-buttons.flex-center.hidden
    .btn-group-sm.mt-2.mb-2{ role: "group" }
      %button.btn.btn-green#edit-button-edit{ type: "button", title: "Edit", 'data-action': "click->feature--modal#toggle_edit_feature", 'data-edit-type': 'ui' }
        %i.bi.bi-pencil-square
        Edit
        %span.d-none.d-sm-inline
          feature
      %button.btn.btn-green#button-edit-raw{ type: "button", title: "Edit", 'data-action': "click->feature--modal#toggle_edit_feature", 'data-edit-type': 'raw' }
        %i.bi.bi-filetype-raw
        %span.d-none.d-sm-inline
          Edit 
        JSON
      %button.btn.btn-green#edit-button-trash{ type: "button", title: "Delete", data: { action: "click->feature--edit#delete_feature" } }
        %i.bi.bi-trash
        Delete 
        %span.d-none.d-sm-inline
          feature

  = render 'maps/modals/feature/edit_ui'
  = render 'maps/modals/feature/edit_raw'

  #feature-details-body.selectable
    %p

    #feature-details-elevation
      %canvas#route-elevation-chart

  #feature-details-meta.mt-2
    %span#feature-size.selectable
    %span#feature-vertexes.selectable
    %span#feature-export.ms-2.link<
      =link_to map_feature_path(id: @map.public_id, feature_id: 'feature_id'), target: '_blank', title: 'Download as geoJSON', 'data-toggle': "tooltip", 'data-bs-placement': "bottom", 'data-bs-trigger': "hover", 'data-bs-custom-class': "maplibregl-ctrl-tooltip" do
        %i.bi.bi-download
    / %span#feature-animation.ms-2.link
    /   %i.bi.bi-camera-reels{title: "Play animation", 'data-toggle': "tooltip", 'data-bs-placement': "bottom", 'data-bs-trigger': "hover", 'data-bs-custom-class': "maplibregl-ctrl-tooltip", 'data-action': "click->feature--modal#animate"}

