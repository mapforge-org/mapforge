#feature-edit-ui.hidden

  #feature-title-input.form-floating.edit-ui.mt-2
    %input.form-control{ "name": "feature-title", data: { action: "input->map--feature-edit#updateTitle" } }
    %label{ for: "feature-title"} Title

  %div
    %button#button-add-label.mt-1.btn.btn-sm.btn-secondary{ type: "button", 'data-action': "click->map--feature-modal#show_add_label" } Add label
    %button#button-add-desc.mt-1.btn.btn-sm.btn-secondary{ type: "button", 'data-action': "click->map--feature-modal#show_add_desc" } Add description

  #feature-label.form-floating.edit-ui.hidden
    %input.form-control{"name": "feature-label", "data-action": "input->map--feature-edit#updateLabel"}
    %label{ for: "feature-label"} Label

  #feature-desc.hidden
    %textarea#feature-desc-input

  / layout properties

  #point-size-ui.edit-ui.edit-point
    %label{ for: "point-size"} Size:
    %input.slider#point-size{ type: "range", min: "1", max: "50", value: "1", 'data-action': "input->map--feature-edit#updatePointSize  change->map--feature-edit#saveFeature" }
    %span#point-size-val.text-muted.small

  #line-width-ui.edit-ui.edit-line
    %label{ for: "line-width"} Width:
    %input.slider#line-width{ type: "range", min: "1", max: "15", value: "1", 'data-action': "input->map--feature-edit#updateLineWidth change->map--feature-edit#saveFeature" }
    %span#line-width-val.text-muted.small

  #outline-width-ui.edit-ui.edit-polygon
    %label{ for: "outline-width"} Line width:
    %input.slider#outline-width{ type: "range", min: "0", max: "15", value: "1", 'data-action': "input->map--feature-edit#updateOutLineWidth change->map--feature-edit#saveFeature" }
    %span#outline-width-val.text-muted.small

  #stroke-color-ui.edit-ui.edit-line.edit-polygon.edit-point
    %label.edit-polygon.edit-line{ for: "stroke-color"} Line color:
    %label.edit-point{ for: "stroke-color"} Border color:
    %input.form-control#stroke-color{ type: "color", 'data-action': "input->map--feature-edit#updateStrokeColor change->map--feature-edit#saveFeature" }
    %div.edit-polygon.edit-point
      %input#stroke-color-transparent{type: "checkbox", data: { action: "input->map--feature-edit#updateStrokeColorTransparent change->map--feature-edit#saveFeature"} }
      %label{ for: "stroke-color-transparent"}transparent

  #fill-color-ui.edit-ui.edit-polygon.edit-point
    %label{ for: "fill-color"} Fill color:
    %input.form-control#fill-color{ type: "color", 'data-action': "input->map--feature-edit#updateFillColor change->map--feature-edit#saveFeature" }
    %div
      %input#fill-color-transparent{type: "checkbox", value: 'transparent', data: { action: "input->map--feature-edit#updateFillColorTransparent change->map--feature-edit#saveFeature"} }
      %label{ for: "fill-color-transparent"}transparent

  #opacity-ui.edit-ui.edit-polygon
    %label{ for: "opacity"} Opacity:
    %input.slider#opacity{ type: "range", min: "1", max: "10", value: "7", 'data-action': "input->map--feature-edit#updateOpacity change->map--feature-edit#saveFeature" }
    %span#opacity-val.text-muted.small

  #fill-extrusion-height-ui.edit-ui.edit-line.edit-polygon
    %label{ for: "fill-extrusion-height"} Height:
    %input.slider#fill-extrusion-height{ type: "range", min: "0", max: "500", value: "0", 'data-action': "input->map--feature-edit#updateFillExtrusionHeight change->map--feature-edit#saveFeature" }
    %span#fill-extrusion-height-val.text-muted.small

  #marker-symbol-ui.edit-ui.edit-point
    %label{ for: "marker-symbol"} Symbol:
    %input.form-control#marker-symbol{ type: "text", size: '1', 'data-action': "input->map--feature-edit#updateMarkerSymbol change->map--feature-edit#saveFeature" }
    %span<
      = surround '(', ')' do
        %a{ href: 'https://emojipedia.org/google/15.1', target: '_blank'}>Emoji list

  #marker-image-ui.edit-ui.edit-point
    %label{ for: "marker-image"} Image:
    - if @user
      %input.form-control#marker-image{ type: "file", name: 'marker-image', 'data-action': "change->map--feature-edit#updateMarkerImage" }
    - else
      %i.bi.bi-info-circle
        Please log in to upload images

  #show-km-markers-ui.edit-ui.edit-line
    %label.edit-line{ for: "show-km-markers"} Show km markers:
    %input#show-km-markers{type: "checkbox", data: { action: "input->map--feature-edit#updateShowKmMarkers change->map--feature-edit#saveFeature"} }
