%head
  %title= content_for?(:title) ? yield(:title) : "Mapforge: Create and share your own maps online"
  %meta{ charset: "UTF-8"}
  %meta{ name: 'viewport', content: 'width=device-width, height=device-height, initial-scale=1, maximum-scale=1.0, user-scalable=no' }
  %meta{ name: 'view-transition', content: 'same-origin' }

  %meta{ name: 'turbo-prefetch', content: 'false' }
  = turbo_refresh_method_tag :morph
  = turbo_refresh_scroll_tag :preserve

  %meta{ name: 'mobile-web-app-capable', content: 'yes' }

  %meta{ name: 'description', content: "Create and share individual maps for your locations, tracks and events." }
  %meta{ name: 'keywords', content: 'map maker, create my map, share maps, online maps, map editor' }

  = csrf_meta_tags
  = csp_meta_tag

  / fonts
  - # https://icons.getbootstrap.com/
  %link{ href: "https://cdn.jsdelivr.net", rel: "preconnect" }
  = stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
  / Logo font
  %link{ href: "https://fonts.googleapis.com", rel: "preconnect" }
  %link{ href: "https://fonts.gstatic.com", rel: "preconnect", crossorigin: true }
  = stylesheet_link_tag "https://fonts.googleapis.com/css2?family=Lobster+Two:ital,wght@0,400;1,400;1,700&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"

  / css
  = stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  - # maptiler-sdk.css includes maplibre-gl css and looks better
  - # needs to get loaded before application.css
  = stylesheet_link_tag "maptiler-sdk", "data-turbo-track": "reload"
  = stylesheet_link_tag "application", "data-turbo-track": "reload"

  - # JS imports, SRI integrity hashes from https://www.srihash.org/
  - # ES Module Shims: Import maps polyfill for older browsers without import maps support (eg Safari 16.3)
  = javascript_include_tag( "https://ga.jspm.io/npm:es-module-shims@1.8.2/dist/es-module-shims.js", 
      async: true, 'data-turbo-track': 'reload', 
      integrity: "sha384-+dzlBT6NPToF0UZu7ZUA6ehxHY8h/TxJOZxzNXKhFD+5He5Hbex+0AIOiSsEaokw", crossorigin: "anonymous")
  = javascript_importmap_tags

  / Bootstrap
  = javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity: "sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin: "anonymous", async: true
  / Stats
  - if ENV['UMAMI_SCRIPT'].present? && ENV['UMAMI_SITE'].present?
    = javascript_include_tag ENV['UMAMI_SCRIPT'], data: { website_id: ENV['UMAMI_SITE'], exclude_hash: true, exclude_search: true, do_not_track: true }, defer: true, crossorigin: "anonymous"

  / dynamic head content
  = yield(:head)

  %link{ rel: "manifest", href: "/manifest.json" }
  %link{ rel: "icon", href: "/icons/mapforge-logo-icon.png", type: "image/png" }
  %link{ rel: "apple-touch-icon", href: "/icons/mapforge-logo-icon.png", sizes: "100x100" }

  - # js config for map
  = Gon::Base.render_data(nonce: content_security_policy_nonce).gsub(';gon.', ";\ngon.").gsub('{', "{\n  ").html_safe
